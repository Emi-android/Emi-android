<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/dlg_whole"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:su="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_50_percent">

    <LinearLayout
        android:id="@+id/dlg_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/bg_gray_color">

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="取消"
                android:textColor="@color/txt_lvl_2"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="确定"
                android:textColor="@color/main_blue"
                android:textSize="18sp"/>
        </RelativeLayout>


        <com.lzh.citytime.widget.ScrollerNumberPicker
            android:id="@+id/county_picker"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            su:itemNumber="3"
            su:lineColor="@color/main_blue"
            su:maskHight="32dp"
            su:noEmpty="true"
            su:normalTextColor="#777"
            su:normalTextSize="14sp"
            su:selecredTextColor="@color/main_blue"
            su:selecredTextSize="22sp"
            su:unitHight="50dp"/>

    </LinearLayout>
</RelativeLayout>